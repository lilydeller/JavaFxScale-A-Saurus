<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="667" prefWidth="375" styleClass="signup-root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignUpController">

    <children>
   
        <Label layoutX="40.0" layoutY="30.0" styleClass="title" text="Welcome! Learn Piano Today!" />

  
        <VBox layoutX="35.0" layoutY="80.0" spacing="15.0" styleClass="signup-container">
            <children>
            <TextField fx:id="txt_username" layoutX="30.0" layoutY="30.0" promptText="username" />
                <TextField fx:id="txt_firstname" promptText="first name" />
                <TextField fx:id="txt_lastname" promptText="last name" />
                <TextField fx:id="txt_email" promptText="email" />
                <TextField fx:id="txt_password" promptText="password" />
                <Button fx:id="btn_signup" onAction="#btnSignUpClicked" styleClass="button" text="Sign Up" />
            <Label fx:id="lbl_error" alignment="CENTER" prefHeight="18.0" prefWidth="240.0" textFill="RED" />
            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>


        <Button fx:id="btn_back" layoutX="20.0" layoutY="630.0" onAction="#handleBack" styleClass="back-button" text="Back" />
      <AnchorPane prefHeight="200.0" prefWidth="200.0" />


    </children>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</AnchorPane>

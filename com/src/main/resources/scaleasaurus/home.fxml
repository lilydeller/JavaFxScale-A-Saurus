<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="667" prefWidth="375.0" styleClass="home-root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomeController">

    <children>

        
        <Label fx:id="lbl_username" layoutX="25.0" layoutY="30.0" styleClass="home-title" text="Welcome username " />

     
        <ProgressBar layoutX="25.0" layoutY="80.0" prefWidth="280.0" progress="0.75" styleClass="points-bar" />
        <Label layoutX="130.0" layoutY="82.0" styleClass="points-label" text="150 Dino Points ⭐" />
        <Button layoutX="110.0" layoutY="110.0" styleClass="green-pill" text="choose reward" />

      
        <VBox layoutX="25.0" layoutY="160.0" spacing="10.0" styleClass="lesson-box">
            <Label styleClass="lesson-title" text="Continue A Lesson!" />
            <HBox spacing="10.0">
                <Label styleClass="progress-badge" text="75%" />
                <Label text="Chapter 1: The Basics" />
            </HBox>
            <HBox spacing="10.0">
                <Label styleClass="progress-badge" text="20%" />
                <Label text="Chapter 2: Chords" />
            </HBox>
            <Button styleClass="quiz-button" text="View all quizzes" />
        </VBox>

    

        
        <VBox layoutX="40.0" layoutY="580.0" spacing="10.0">
            <Button fx:id="btn_findSong" onAction="#handleFindSong" text="Find a Song!" />
            <Button fx:id="btn_create_song" layoutX="90" layoutY="300" onAction="#handleCreateSong" styleClass="button" text="Create a Song!" />

            <Button styleClass="blue-outline" text="Continue last song played" />
        </VBox>

    </children>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox prefHeight="60.0" prefWidth="375.0" spacing="10" styleClass="navbar" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.NavbarController">

    <children>
        <Button fx:id="homeBtn" onAction="#goHome" style="-fx-background-color: transparent;" styleClass="nav-button">
            <graphic>
                <ImageView fitHeight="45.0" fitWidth="51.0">
                    <image>
                        <Image url="@../images/home.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button onAction="#goFindSong" styleClass="nav-button">
         <graphic>
            <ImageView fitHeight="56.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/loupe.png" />
               </image>
            </ImageView>
         </graphic></Button>
        <Button onAction="#goLessons" styleClass="nav-button">
         <graphic>
            <ImageView fitHeight="68.0" fitWidth="54.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/flash-card.png" />
               </image>
            </ImageView>
         </graphic></Button>
        <Button onAction="#goUser" styleClass="nav-button">
         <graphic>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/settings.png" />
               </image>
            </ImageView>
         </graphic></Button>
    </children>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</HBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.fxml.FXMLLoader?>

<AnchorPane prefHeight="667.0" prefWidth="375.0" styleClass="home-root" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FlashcardController">

    <StackPane fx:id="frontStack" layoutX="37.5" layoutY="180" prefHeight="200" prefWidth="300">
         <Rectangle fx:id="frontRectangle" fill="lightblue" height="200" stroke="black" width="300" />
        <Label fx:id="frontLabel" alignment="CENTER" maxWidth="280" style="-fx-font-size: 18px;" textAlignment="CENTER" wrapText="true">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </Label>
    </StackPane>

    <StackPane fx:id="backStack" layoutX="37.5" layoutY="180" prefHeight="200" prefWidth="300" visible="false">
        <Rectangle fx:id="backRectangle" fill="lightblue" height="200" stroke="black" width="300" />
        <Label fx:id="backLabel" alignment="CENTER" maxWidth="280" style="-fx-font-size: 18px;" textAlignment="CENTER" wrapText="true">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </Label>
    </StackPane>

    <Button layoutX="68.0" layoutY="413.0" onAction="#handleClick" styleClass="green-pill" text="Flip Card" />
    <Button layoutX="68.0" layoutY="461.0" onAction="#handleNextCard" styleClass="green-pill" text="Next Card" />
    <Button layoutX="68.0" layoutY="508.0" onAction="#handleCompleteLesson" styleClass="green-pill" text="Complete Lesson" />


    <fx:include source="navbar.fxml" />

</AnchorPane>

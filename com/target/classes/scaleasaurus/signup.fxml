<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="login_pane" prefHeight="620.0" prefWidth="383.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
            
    <children>
      <Label layoutX="21.0" layoutY="32.0" text="Welcome! Learn Piano Today!">
         <font>
            <Font size="30.0" />
         </font>
      </Label>


      <Button fx:id="btn_signup" layoutX="130.0" layoutY="387.0" mnemonicParsing="false" onAction="#btnSignUpClicked" onMouseClicked="#btnLoginClicked" prefHeight="24.0" prefWidth="173.0" text="Sign Up " />


      <TextField fx:id="txt_firstname" layoutX="142.0" layoutY="133.0" promptText="First name" />


      <TextField fx:id="txt_lastname" layoutX="143.0" layoutY="192.0" promptText="Last name" />


      <Label fx:id="lbl_error" layoutX="218.0" layoutY="235.0" prefHeight="16.0" prefWidth="170.0" />
      <Button fx:id="btn_back" layoutX="14.0" layoutY="579.0" mnemonicParsing="false" onAction="#switchToLogin" prefHeight="26.0" prefWidth="110.0" text="Back" textAlignment="CENTER" />
      <TextField fx:id="txt_email" layoutX="142.0" layoutY="253.0" promptText="Email" />
      <TextField fx:id="txt_password" layoutX="142.0" layoutY="310.0" promptText="Password" />
    </children>


    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</AnchorPane>

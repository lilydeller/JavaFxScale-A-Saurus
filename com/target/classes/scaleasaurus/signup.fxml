<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.SignUpController"
            styleClass="signup-root"
            prefWidth="375" prefHeight="667">

    <children>
   
        <Label layoutX="40.0" layoutY="30.0" text="Welcome! Learn Piano Today!" styleClass="title" />

  
        <VBox layoutX="35.0" layoutY="80.0" spacing="15.0" styleClass="signup-container">
            <children>
                <TextField fx:id="txt_firstname" promptText="first name" />
                <TextField fx:id="txt_lastname" promptText="last name" />
                <TextField fx:id="txt_email" promptText="email" />
                <TextField fx:id="txt_password" promptText="password" />
                <Button fx:id="btn_signup" text="Sign Up" onAction="#handleSignUp" styleClass="button" />
            </children>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>


        <Button layoutX="20.0" layoutY="630.0" text="Back" fx:id="btn_back" onAction="#handleBack" styleClass="back-button" />


    </children>

    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>
</AnchorPane>

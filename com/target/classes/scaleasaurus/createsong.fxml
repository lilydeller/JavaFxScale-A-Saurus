<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="667" prefWidth="375" style="-fx-background-color: #f0e4d0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CreateSongController">

    <children>

        <Label layoutX="90.0" layoutY="20.0" text="Create your own song!" style="-fx-font-size: 22px; -fx-font-style: italic; -fx-font-weight: bold; -fx-text-fill: #245744;" />

        <VBox layoutX="30.0" layoutY="70.0" prefWidth="310.0" style="-fx-background-color: #ddfd98; -fx-padding: 10;">
            <TextField fx:id="songNameField" promptText="Enter custom song name" />
        </VBox>

        <VBox layoutX="30.0" layoutY="140.0" prefWidth="310.0" style="-fx-background-color: #ddfd98; -fx-padding: 10;">
            <ComboBox fx:id="measuresDropdown" promptText="Select number of measures" />
        </VBox>

        <VBox layoutX="30.0" layoutY="210.0" prefWidth="310.0" style="-fx-background-color: #ddfd98; -fx-padding: 10;">
            <ComboBox fx:id="difficultyDropdown" promptText="Select difficulty" />
        </VBox>

        <VBox layoutX="30.0" layoutY="280.0" prefWidth="310.0" style="-fx-background-color: #ddfd98; -fx-padding: 10;">
            <ComboBox fx:id="genreDropdown" promptText="Select genre" />
        </VBox>

        <VBox layoutX="30.0" layoutY="350.0" prefWidth="310.0" style="-fx-background-color: #ddfd98; -fx-padding: 10;">
            <TextField fx:id="durationField" promptText="Enter duration (e.g. 1:00)" />
        </VBox>

        <VBox layoutX="30.0" layoutY="420.0" prefWidth="310.0" style="-fx-background-color: #ddfd98; -fx-padding: 10;">
            <ListView fx:id="notesListView" prefHeight="100.0" style="-fx-background-color: #ddfd98;" />
            <Button layoutX="30.0" layoutY="500.0" prefWidth="310.0" text="Add Selected Notes" onAction="#addSelectedNotes" style="-fx-background-color: #245744; -fx-text-fill: white; -fx-font-weight: bold;" />
             <Button text="Save Song" onAction="#saveSong" style="-fx-background-color: #ed8f33; -fx-text-fill: white; -fx-font-weight: bold;" />
        </VBox>

     

    </children>

         <fx:include source="navbar.fxml">
    <AnchorPane.bottomAnchor>0.0</AnchorPane.bottomAnchor>
    <AnchorPane.leftAnchor>0.0</AnchorPane.leftAnchor>
    <AnchorPane.rightAnchor>0.0</AnchorPane.rightAnchor>
</fx:include>

    <stylesheets>
    <URL value="@styles.css" />
</stylesheets>


</AnchorPane>
